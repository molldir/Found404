<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Градиентный фон -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1E88E5"
                android:endColor="#0D47A1"
                android:type="linear" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Пунктирная рамка -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/white"
                android:dashWidth="8dp"
                android:dashGap="4dp" />
            <corners android:radius="8dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>

    <!-- Иконка камеры в центре (видна когда нет изображения) -->
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:drawable="@drawable/ic_camera_placeholder"
                android:state_empty="true" />
        </selector>
    </item>
</layer-list>