<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lost_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lost Item"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lost_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="#B0BEC5"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/lost_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Lost"
        android:textSize="12sp"
        android:textColor="#B0BEC5"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/lost_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="12sp"
        android:textColor="#B0BEC5"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/lost_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reward"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <ImageView
        android:id="@+id/lost_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="@drawable/image_preview_background"
        android:layout_marginTop="12dp"
        android:contentDescription="Post image" />
</LinearLayout>